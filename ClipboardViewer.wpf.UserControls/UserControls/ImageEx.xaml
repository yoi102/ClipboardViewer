<UserControl x:Class="ClipboardViewer.wpf.UserControls.UserControls.ImageEx"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ClipboardViewer.wpf.UserControls.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Border Background="Black">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <ScrollViewer x:Name="BackFrame"
                              Background="Black"
                              Cursor="Arrow"
                              Focusable="False"
                              HorizontalScrollBarVisibility="Disabled"
                              MouseDown="BackFrame_MouseDown"
                              VerticalScrollBarVisibility="Disabled">
                    <!--  <Image Source="{Binding Path=ImageSource, ElementName=IM}"  -->
                    <Image x:Name="image"
                           Width="Auto"
                           Height="Auto"
                           MouseDown="Image_MouseDown"
                           MouseLeftButtonDown="Image_MouseLeftButtonDown"
                           MouseMove="Image_MouseMove"
                           MouseWheel="Image_MouseWheel"
                           RenderOptions.BitmapScalingMode="NearestNeighbor"
                           Stretch="Uniform">

                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform />
                                <TranslateTransform />
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                </ScrollViewer>
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal">
                    <TextBlock Margin="10,0,0,0"
                               Foreground="White"
                               Text=" X:" />
                    <TextBlock Name="Path_X"
                               Foreground="White" />
                    <TextBlock Margin="10,0,0,0"
                               Foreground="White"
                               Text=" Y:" />
                    <TextBlock Name="Path_Y"
                               Foreground="White" />

                    <StackPanel x:Name="GrayPanel"
                                Orientation="Horizontal"
                                Visibility="Collapsed">

                        <TextBlock Name="Text_Gray"
                                   Margin="10,0,0,0"
                                   Foreground="White"
                                   Text=" Gray:" />
                        <TextBlock Name="Path_Gray"
                                   Foreground="White" />
                    </StackPanel>

                    <StackPanel x:Name="RGBPanel"
                                Orientation="Horizontal"
                                Visibility="Collapsed">

                        <TextBlock Name="Text_R"
                                   Margin="10,0,0,0"
                                   Foreground="White"
                                   Text=" R:" />
                        <TextBlock Name="Path_R"
                                   Foreground="White" />
                        <TextBlock Name="Text_G"
                                   Margin="10,0,0,0"
                                   Foreground="White"
                                   Text=" G:" />
                        <TextBlock Name="Path_G"
                                   Foreground="White" />
                        <TextBlock Name="Text_B"
                                   Margin="10,0,0,0"
                                   Foreground="White"
                                   Text=" B:" />
                        <TextBlock Name="Path_B"
                                   Foreground="White" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>